<?xml version="1.0" encoding="UTF-8"?>

    <FrameLayout tools:context=".EditProfile" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textSize="50dp"
        android:text="Edit Profile"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/button_style"
        android:hint="Name" android:layout_marginTop="100dp"
        android:id="@+id/name" android:padding="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/recycler_active" android:scrollbars="vertical" android:layout_weight="1"/>

    <androidx.recyclerview.widget.RecyclerView android:layout_height="match_parent" android:layout_width="0dp" android:id="@+id/recycler_inactive" android:scrollbars="vertical" android:layout_weight="1" android:alpha="0.5"/>

</FrameLayout>